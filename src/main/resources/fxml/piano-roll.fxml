<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<?import by.fpmi.bsu.pianolane.ui.GridPane?>
<?import javafx.scene.Group?>
<BorderPane xmlns="http://javafx.com/javafx/8.0" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="by.fpmi.bsu.pianolane.controller.PianoRollController"
            stylesheets="@../css/panel.css">
    <top>
        <!--        <HBox alignment="CENTER" styleClass="top-box" prefHeight="50">-->
        <!--            <Spinner fx:id="bpmSpinner" prefWidth="80"/>-->
        <!--            <Button fx:id="playButton" text="▶" styleClass="play-button"/>-->
        <!--            <Button fx:id="stopButton" text="■" styleClass="stop-button"/>-->
        <!--        </HBox>-->
        <HBox alignment="TOP_RIGHT" styleClass="top-panel">
            <Button fx:id="closeButton" text="X" styleClass="close-button"/>
        </HBox>
    </top>
    <center>
        <SplitPane orientation="VERTICAL"
                   style="-fx-background-color: lightgray; -fx-divider-position: 0.5;">

            <ScrollPane fx:id="verticalScrollPane" fitToWidth="true" hbarPolicy="NEVER"
                        style="-fx-background-color: black;">
                <AnchorPane fx:id="pianoRollContainer" style="-fx-background-color: black;">

                    <Pane fx:id="keyboardPane" prefWidth="120" stylesheets="@/css/piano-keys.css"
                          AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"/>
                    <ScrollPane fx:id="horizontalScrollPane"
                                AnchorPane.leftAnchor="120"
                                AnchorPane.topAnchor="0"
                                AnchorPane.rightAnchor="0"
                                AnchorPane.bottomAnchor="0"
                                style="-fx-background-color: lightgray;"
                                vbarPolicy="NEVER"
                                fitToHeight="true">
                        <GridPane fx:id="gridPane" style="-fx-background-color: lightgray;"/>
                    </ScrollPane>
                </AnchorPane>
            </ScrollPane>
            <Pane style="-fx-background-color: lightgray;"/>
        </SplitPane>
    </center>
</BorderPane>
