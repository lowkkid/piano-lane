<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.VBox?>
<VBox fx:id="toolsAndSettings"
      prefHeight="100.0"
      prefWidth="200.0"
      style="-fx-background-color: rgb(150, 150, 150);"
      xmlns="http://javafx.com/javafx/8.0"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="by.fpmi.bsu.pianolane.controller.ToolbarController">
    <HBox fx:id="leftInnerBox" alignment="CENTER" styleClass="top-box" prefHeight="50" stylesheets="@../css/panel.css">
        <Spinner fx:id="bpmSpinner" prefWidth="80"/>
        <Button fx:id="playButton" text="▶" styleClass="play-button"/>
        <Button fx:id="stopButton" text="■" styleClass="stop-button"/>
    </HBox>
    <HBox alignment="CENTER" styleClass="top-box">
        <Button fx:id="menuButton" styleClass="menu-button" stylesheets="@../css/panel.css">
            <graphic>
                <FontIcon iconLiteral="bi-list" />
            </graphic>
        </Button>
    </HBox>
</VBox>